@using MvcCV.Models.Entity
@model  List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h2>Hobi Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var x in Model)
    {
        <label>Açıklama 1 </label>
        <textarea role="5" class="form-control" name="Aciklama1">@x.Aciklama1</textarea>
        <label>Açıklama 2 </label>
        <textarea role="5" class="form-control" name="Aciklama2">@x.Aciklama2</textarea>
    }
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>